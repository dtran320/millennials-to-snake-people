{
	"manifest_version": 2,

	"name": "On the blockchain",
    "short_name": "On the blockchain",
	"description": "Adds 'on the blockchain' to the end of every sentence.",
	"author": "David Tran",
	"version": "0.1.2",
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"all_frames": true,
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	]
}
